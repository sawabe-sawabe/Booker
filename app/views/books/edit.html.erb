<% if flash[:notice] %>
 <p class ="notice"><%= flash[:notice] %></p>
<%end%>

<h1>Editing Book</h1>
<%= form_with model: @book,  local:true do |f| %>
 <div class="field">
 <label>Title</label>
 <%= f.text_field :title %>
 </div>

 <div class="field">
 <label>Body</label>
 <%= f.text_area :body %>
 </div>
 <div class="action">
 <%= f.submit 'Create Book' %>
 </div>
<% end %>

 	<%= link_to "Show", book_path(@book),class:"btn" %>
   |

  <%= link_to "Back", books_path,class:"btn" %>
