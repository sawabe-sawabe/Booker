<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<%end%>
<h1>Books</h1>
<table>
 	<thead>
 	<tr>
 	<th class="th1">Title</th>
 	<th class="th2">Body</th>
 	<th colspan="3"><th>
 	</tr>
 	</thead>
 	<tbody>

 	 <% @books.each do |book| %>
 	 <tr>
 	  <td class="td1"><%= book.title %></td>
    <td class="td2"><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id),class:"link" %></td>
    <td > <%= link_to "Edit", edit_book_path(book),class:"link" %></td>
    <td ><%= link_to "Destory", book_path(book),class:"link", method: :delete %></td>
   </tr>
    <% end %>



   </tbody>
  </table>


<h2>New book</h2>



<%= form_with model: @book,  local:true do |f| %>
  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>
  <div class="action">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>