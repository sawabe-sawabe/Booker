<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<%end%>
<h1>Books</h1>
<table>
 	<thead>
 	<tr>
 	<th class="th1">Title</th>
 	<th class="th2">Body</th>
 	<th colspan="3"><th>
 	</tr>
 	</thead>
 	<tbody>

 	 <% @books.each do |book| %>
 	 <tr>
 	  <td class="td1"><%= book.title %></td>
    <td class="td2"><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id),class:"link" %></td>
    <td > <%= link_to "Edit", edit_book_path(book),class:"link" %></td>
    <td ><%= link_to "Destroy", book_path(book.id),class:"link", method: :delete %></td>
   </tr>
    <% end %>



   </tbody>
  </table>


<h2>New book</h2>

 <%= form_with model: @book,  local:true do |f| %>

  <% if @book.errors.any? %>

   <div id="error_explamation">
   <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
       <%end%>
   </ul>
   </div>

  <% end %>


  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title,class:"book_title" %>
  </div>

  <div class="field">
     <label for="book_body">Body</label>
     <%= f.text_area :body,class:"book_body" %>
  </div>

  <div class="action">
   <%= f.submit 'Create Book' %>
  </div>
<% end %>